<Window x:Class="OCROverlay.FirstRunForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCROverlay"
        mc:Ignorable="d"
        Title="Program Setup" 
        Height="320" 
        Width="480"
        WindowStartupLocation="CenterScreen" Background="White">
    <Grid>
        <Button x:Name="btn_confirm" Content="Confirm" HorizontalAlignment="Left" Margin="173,237,0,0" VerticalAlignment="Top" Width="130" Height="34" FontSize="18" Click="btn_confirm_Click"/>
        <Button x:Name="btn_languages" Content="Select Languages" HorizontalAlignment="Left" Margin="68,62,0,0" VerticalAlignment="Top" Width="183" Height="34" FontSize="18" Click="btn_languages_Click"/>
        <Button x:Name="btn_screens" Content="Select Screen" HorizontalAlignment="Left" Margin="68,110,0,0" VerticalAlignment="Top" Width="183" Height="34" FontSize="18" Click="btn_screens_Click" IsEnabled="False"/>
    </Grid>
</Window>
